generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Medicine {
  id            String  @id @default(cuid())
  name          String
  genericName   String?
  manufacturer  String?
  prices        Price[]
}

model Pharmacy {
  id        String  @id @default(cuid())
  name      String
  address   String?
  city      String
  state     String
  pincode   String
  latitude  Float?
  longitude Float?
  prices    Price[]
}

model Price {
  id            String   @id @default(cuid())
  price         Float
  discount      Float?   @default(0)
  lastUpdatedAt DateTime @updatedAt

  medicine   Medicine @relation(fields: [medicineId], references: [id])
  medicineId String

  pharmacy   Pharmacy @relation(fields: [pharmacyId], references: [id])
  pharmacyId String

  @@unique([medicineId, pharmacyId]) // Ensures one price entry per medicine per pharmacy
}
